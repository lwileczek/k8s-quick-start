---
apiVersion: v1
kind: ConfigMap
metadata:
  namespace: metallb-system
  name: config
data:
  config: |
    address-pools:
{% for address_pool in metallb.address_pools%}
    - name: {{ address_pool.name }}
      protocol: layer2
      addresses:
      - {{ metallb.ip_range }}
      auto-assign: {{ metallb.auto-assign }}
{% endfor %}

